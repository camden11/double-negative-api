{
  "connection": "default",
  "collectionName": "post",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "unique": true,
      "type": "string",
      "required": true
    },
    "featureImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "content": {
      "required": true,
      "type": "text"
    },
    "blurb": {
      "type": "string"
    },
    "author": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    },
    "gallery": {
      "model": "gallery"
    },
    "categories": {
      "collection": "category",
      "via": "posts",
      "dominant": true
    },
    "genres": {
      "collection": "genre",
      "via": "posts",
      "dominant": true
    },
    "publishDate": {
      "type": "date",
      "required": true
    }
  }
}